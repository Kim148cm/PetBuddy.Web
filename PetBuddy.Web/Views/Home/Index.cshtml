@{
    ViewBag.Title = "Trang chủ";
}

<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        margin: 0;
        font-family: 'Quicksand', sans-serif;
        background: rgb(247, 246, 211);
    }

    /* ===== HERO ===== */
    .hero-banner {
        position: relative;
        width: 100%;
        height: 520px;
        overflow: hidden;
    }

        .hero-banner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .hero-overlay {
        position: absolute;
        top: 55%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0,0,0,0.55);
        padding: 35px 55px;
        border-radius: 12px;
        text-align: center;
    }

        .hero-overlay h1 {
            color: #fff;
            font-size: 36px;
            font-weight: 700;
            text-transform: uppercase;
        }

    /* ===== SECTION ===== */
    .section {
        padding: 70px 90px;
        text-align: center;
    }

        .section h2 {
            font-size: 26px;
            font-weight: 700;
            color: rgb(243, 158, 182);
        }

            .section h2 span {
                color: rgb(184, 219, 128);
            }

    .line {
        width: 70px;
        height: 3px;
        background: rgb(184, 219, 128);
        margin: 12px auto 45px;
    }

    /* ===== PRODUCT ===== */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 30px;
    }

    .product-item {
        background: #fff;
        padding: 15px;
        border-radius: 18px;
        transition: .4s;
    }

        .product-item:hover {
            transform: translateY(-10px);
        }

        .product-item img {
            width: 100%;
            border-radius: 14px;
        }

        .product-item b {
            color: rgb(243, 158, 182);
        }

    /* ===== SERVICE ===== */
    .service-wrapper {
        display: flex;
        justify-content: center;
        gap: 45px;
        margin: 80px 0;
    }

    .service-card {
        width: 360px;
        padding: 35px;
        border-radius: 30px;
        background: linear-gradient(160deg, rgb(255,228,239), rgb(243,158,182));
        color: #fff;
        text-align: center;
        transition: .4s;
    }

        .service-card img {
            width: 95px;
            border-radius: 50%;
            border: 4px solid rgb(184,219,128);
        }

        .service-card:hover {
            transform: translateY(-15px) scale(1.05);
        }

    .btn-read {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 28px;
        background: #fff;
        color: rgb(243,158,182);
        border-radius: 30px;
        font-weight: 700;
        text-decoration: none;
    }
    /* ===== BEST SELLING ===== */
    .best-selling {
        padding: 80px 90px;
        text-align: center;
        background: #fff;
    }

        .best-selling h2 {
            font-size: 26px;
            font-weight: 700;
            color: rgb(243, 158, 182);
        }

            .best-selling h2 span {
                color: rgb(184, 219, 128);
                font-weight: 500;
            }

        .best-selling .view-more {
            display: inline-block;
            margin-top: 8px;
            font-size: 13px;
            color: #666;
            text-decoration: none;
        }

        .best-selling .line {
            width: 60px;
            height: 2px;
            background: #000;
            margin: 15px auto 50px;
        }

    /* list */
    .best-list {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 60px;
        align-items: center;
    }

    .best-item {
        text-align: center;
        transition: .4s;
    }

        .best-item img {
            max-width: 220px;
            height: auto;
            transition: .4s;
        }

        .best-item:hover img {
            transform: scale(1.08);
        }

        .best-item p {
            margin: 18px 0 6px;
            font-size: 14px;
            color: #333;
        }

        .best-item b {
            color: rgb(243, 158, 182);
            font-size: 14px;
        }

    /* arrow (fake slider look) */
    .best-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: #f2f2f2;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        cursor: pointer;
    }

        .best-arrow.left {
            left: 30px;
        }

        .best-arrow.right {
            right: 30px;
        }


    /* ===== NEWS ===== */
    .news-section {
        max-width: 1200px;
        margin: 80px auto;
        text-align: center;
    }

    .news-title {
        font-size: 30px;
        font-weight: 800;
        color: rgb(243, 158, 182);
    }

    .news-sub {
        font-size: 14px;
        color: rgb(184, 219, 128);
        margin-bottom: 10px;
    }

    .news-line {
        width: 70px;
        height: 3px;
        background: rgb(243, 158, 182);
        margin: 10px auto 45px;
    }

    .news-list {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
    }

    .news-item {
        background: #fff;
        padding: 15px;
        border-radius: 12px;
        text-align: left;
    }

        .news-item img {
            width: 100%;
            border-radius: 10px;
        }

    .news-date {
        font-size: 12px;
        color: #777;
    }

    /* ===== NEWSLETTER BACKGROUND ===== */
    .newsletter {
        position: relative;
        background-image: url('/Content/anh/newsletter-bg.jpg'); /* đổi đúng tên ảnh của bạn */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        padding: 80px 20px;
    }

        /* Lớp phủ tối để chữ nổi */
        .newsletter::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.55);
        }

    /* Nội dung nằm trên ảnh */
    .newsletter-content {
        position: relative;
        max-width: 600px;
        margin: auto;
        text-align: center;
        color: #fff;
    }

        /* Tiêu đề */
        .newsletter-content h2 {
            font-size: 28px;
            margin-bottom: 10px;
            color: #fff;
        }

        /* Mô tả */
        .newsletter-content p {
            margin-bottom: 25px;
            color: #eee;
        }

    /* Form */
    .newsletter-form {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

        .newsletter-form input {
            padding: 12px 15px;
            width: 280px;
            border-radius: 4px;
            border: none;
            outline: none;
        }

        .newsletter-form button {
            padding: 12px 20px;
            background: #ff7a00;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }

            .newsletter-form button:hover {
                background: #e96c00;
            }

        }
</style>

